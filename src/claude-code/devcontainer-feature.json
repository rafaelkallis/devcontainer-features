{
    "name": "Claude Code",
    "id": "claude-code",
    "version": "1.0.0",
    "description": "Installs the Claude Code CLI.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "stable",
                "2.1.50"
            ],
            "default": "latest",
            "description": "Select the Claude Code CLI version to install."
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "anthropic.claude-code"
            ]
        }
    }
}